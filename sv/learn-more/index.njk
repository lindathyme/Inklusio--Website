<!-- Translation Data -->
{% set pageData = translations[page.lang].pages.learn_more %}

<!-- Imports -->
{%- from "components/iconcard/macro.njk" import iconcard -%} {%- from
"components/numbercard/macro.njk" import numbercard -%} {%- from
"components/iconheadingcard/macro.njk" import iconheadingcard -%}

<!--Sektion 1 p/img -->
<div class="container py-5 my-xl-5">
  <div class="d-flex flex-row align-items-center justify-content-between">
    <div class="pl-xl-2">
      <div class="mr-xl-5 pr-xl-5">
        <h1 class="section-header-text mr-2 mr-md-4 mr-xl-5 pr-xl-3">
          {{ pageData.section[0].heading }}
        </h1>
      </div>
      <p class="section-para-text text-left">
        {{ pageData.section[0].paragraph[0] }}
      </p>
      <div class="d-lg-none px-2 py-5 px-sm-5">
        {% image "img/diverse-group-drawing.jpg", "Tegning af forskellige
        mennesker, herunder mænd og kvinder, med og uden briller, en med et
