---
layout: layouts/home.njk

eleventyComputed:
  page_lang: 'sv'
  permalink: "{{ translations[page_lang].navigation.home.url }}"
  title: "{{ translations[page_lang].navigation.home.title }}"
  
---

<!-- Translation Data -->
{% set homePageData = translations[page.lang].pages.home %}

<!-- Imports -->
{%- from "components/iconcard/macro.njk" import iconcard -%}
{%- from "components/numbercard/macro.njk" import numbercard -%} 

<!-- Banner -->
<div class="banner bg-dark text-light">
  <div class="container-sm py-md-5">
    <div class="row align-items-center p-lg-2 mx-xxl-5 m-xxxl-0 p-xxxl-0">
      <div class="col-sm-12 col-md-12 col-lg-6">
        <h1 class="banner-header banner-header-text mt-5 mt-lg-0">{{ homePageData.section[0].heading }}</h1>
        <p class="lead my-4 banner-header-helper-text">
          {{ homePageData.section[0].paragraph }}
        </p>
        <a href="https://calendly.com/inklusio-ses/1-1" class="btn btn-primary">{{ homePageData.section[0].button_text }}</a>
      </div> <!-- col -->
 
      <div class="col-sm-12 col-md-12 col-lg-6">
        <div class="mt-5 pb-5 pb-xxl-0 m-xxxl-5 rounded overflow-hidden">
          {% image "img/AnneSEKat.jpg", homePageData.section[0].img_alt, "400, 800, 1200"%}
        </div>
      </div><!-- col -->
    </div> <!-- row -->
  </div> <!-- Container -->
</div><!-- banner -->

<!-- Selling point responsive card -->
<div class="container py-5">
  <div class="row m-md-5 p-md-2 m-lg-0 my-lg-5 p-lg-0 py-lg-2 my-xl-5 m-xxl-5 p-xl-2 text-left">
    {{ iconcard ({
      card_class: 'card col-sm-12 col-lg-4 col-xl-4 border-0 pr-5',
      icon: 'bi bi-people',
      heading: homePageData.section[1].card[0].heading,
      body: homePageData.section[1].card[0].paragraph
    }) }}
      
    {{ iconcard({
      card_class: 'card col-sm-12 col-lg-4 col-xl-4 border-0 pr-5',
      icon: 'bi bi-ui-checks-grid',
      heading: homePageData.section[1].card[1].heading,
      body: homePageData.section[1].card[1].paragraph
    }) }}

    {{ iconcard({
      card_class: 'card col-sm-12 col-lg-4 col-xl-4 border-0 pr-5',    
      icon: 'bi bi-lightbulb',
      heading: homePageData.section[1].card[2].heading,
      body: homePageData.section[1].card[2].paragraph
    }) }}
  </div>
</div>



<!-- Image and text Hvad er tilgÃ¦ngelighed -->

<div class="container py-5 py-sm-0 pb-sm-2">
  <div class="row m-md-5 p-md-2 m-lg-0 p-lg-0 m-xxl-5 p-xxl-5 d-flex justify-content-center">
  
    <div class="col-12 col-lg-6 col-xxl-6">
      {% image "img/Section6Image.png", homePageData.section[2].img_alt, "400, 800, 1200"%}
    </div>
  
    <div class="d-lg-flex flex-lg-column px-xxl-5 ml-xxl-5 col-lg-5">
      <div class="my-lg-auto">
        <h2 class="my-4 my-lg-0 my-xl-2">{{ homePageData.section[2].heading }}</h2>
        <p class= "my-4 my-xl-5 text-left">
          {{ homePageData.section[2].paragraph }}
        </p>
        <a href="/ydelser/" class="btn btn-primary mt-xl-3">{{ homePageData.section[2].button_text }}</a>
      </div>
    </div>
  </div>  
</div>  


<!-- Talkort responsiv --> 
<div class="container pb-5">
  <div class="row m-md-5 p-md-2 m-lg-0 my-lg-5 p-lg-0 py-lg-5 m-xl-5 p-xl-2 text-left">

    {{ numbercard({
      number: '100+',
      heading: homePageData.section[3].card[0].heading,
      body: homePageData.section[3].card[0].paragraph
    }) }}

     {{ numbercard({
      number: '6',
      heading: homePageData.section[3].card[0].heading,
      body: homePageData.section[3].card[0].paragraph
    }) }}

     {{ numbercard({
      number: '2',
      heading: homePageData.section[3].card[0].heading,
      body: homePageData.section[3].card[0].paragraph
    }) }}

  </div>
</div>




