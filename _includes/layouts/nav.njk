{% set navigationData = translations[page.lang].navigation %}

{% set isCurrentUrlInNavigation = false %}
{% set navigationKeyForCurrentUrl = '' %}
{% for key, navigationItem in navigationData %}
  {% if navigationItem.url == page.url %}
    {% set isCurrentUrlInNavigation = true %}
    {% set navigationKeyForCurrentUrl = key %}
  {% endif %}
{% endfor %}

<header class="site-header">
  <a class="skiptomain" href="#main">{{ translations[page.lang].keywords.skip_to_main_content }}</a>
  <div class="container py-2">
    <nav class="navbar navbar-expand-lg navbar-dark row align-items-center" aria-label="Top menu">
      <a class="navbar-brand" href="{{navigationData.home.url}}">
        <div class="mr-4 mb-2" style="width: 150px; height: 22px;">
          {% image 'img/logo.png', "Inklusio logo", "400" %}
        </div>
      </a>

      <div class="d-flex flex-row ml-auto ">
        <!-- Mobile Language Switcher -->
        <div class="d-block d-lg-none">
          <div class="col text-center mt-2">
            <div class="dropdown mt-n1">
              <button lang="en" class="btn btn-sm btn-dark" type="button" data-toggle="collapse" aria-expanded="false" aria-controls="languageDropdownMobile">
                <i role="img" class="bi bi-globe" style="font-size: 16px;" aria-label="{{ translations[page.lang].keywords.switch_language_button }} "></i>
                <span class="sr-only">{{ languages[page.lang].name }}</span>
                <span aria-hidden="true" class="text-uppercase" style="font-size: 16px;">{{ page.lang }}</span>
              </button>
              <div lang="en" id="languageDropdownMobile" class="dropdown-menu collapse">
                {% for lang, lang_data in languages %}
                  {% if lang != page.lang %}
                    {% if isCurrentUrlInNavigation %}
                      <a class="dropdown-item" href="{{ translations[lang].navigation[navigationKeyForCurrentUrl].url }}">{{ lang_data.name }}</a>
                    {% else %}
                      <a class="dropdown-item" href="{{ translations[lang].navigation['home'].url }}">{{ lang_data.name }}</a>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
  
        <button aria-label="Menu" class="navbar-toggler ml-auto custom-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-controls="collapsingNavbar4">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <div class="navbar-collapse collapse" id="collapsingNavbar4">
        <div class="navbar-nav mt-1">
          {% for _, navObj in navigationData %}
            <a class="nav-item nav-link text-decoration-underline-hover text-white {% if navObj.url == page.url %} text-decoration-underline {% endif %} mr-4 mr-lg-2 mr-xl-4" {% if navObj.url == page.url %} aria-current="page"{% endif %} href="{{ navObj.url }}">{{ navObj.text }}</a>
          {% endfor %}
        </div>

        <!-- Desktop Language Switcher -->
        <div class="d-none d-lg-block ml-auto pr-xxxl-0">
          <div class="col text-center mt-2">
            <div class="dropdown">
              <button lang="en" class="btn btn-sm btn-dark" type="button" data-toggle="collapse" aria-expanded="false" aria-controls="languageDropdownDesktop">
                <i role="img" class="bi bi-globe" style="font-size: 16px;" aria-label="{{ translations[page.lang].keywords.switch_language_button }} "></i>
                <span class="sr-only">{{ languages[page.lang].name }}</span>
                <span aria-hidden="true" class="text-uppercase" style="font-size: 16px;">{{ page.lang }}</span>
              </button>
              <div lang="en" id="languageDropdownDesktop" class="dropdown-menu collapse">
                {% for lang, lang_data in languages %}
                  {% if lang != page.lang %}
                    {% if isCurrentUrlInNavigation %}
                      <a class="dropdown-item" href="{{ translations[lang].navigation[navigationKeyForCurrentUrl].url }}">{{ lang_data.name }}</a>
                    {% else %}
                      <a class="dropdown-item" href="{{ translations[lang].navigation['home'].url }}">{{ lang_data.name }}</a>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
        </div>

      </div>
    </nav>
  </div>
</header>
