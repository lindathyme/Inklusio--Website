<div class="card col-sm-12 col-md-4 col-xl-3 my-4 border-0">
  <h3 {% if params.heading_level %} aria-level="{{ params.heading_level }}"{% endif %}>
    <span class="card-title-number">{{ params.number }}</span>
    <br>
    <span class="card-title-font">{{ params.heading }}</span>
  </h3>
  <p class="section-para-text mb-0 text-left">{{ params.body }}</p>
</div>