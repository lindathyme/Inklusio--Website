<div class="card col-sm-12 col-md-4 col-xl-3 my-4 border-0 {{params.card_class}}">
  <div class="text-start">
    <i class="{{ params.icon }}" style="font-size: 4rem;"></i>
    <h3 class="card-title-font"{% if params.heading_level %} aria-level="{{ params.heading_level }}"{% endif %}>
      {{ params.heading }}
    </h3>
    <p class="section-para-text text-left">
      {{ params.body }}
    </p>
  </div>
</div>