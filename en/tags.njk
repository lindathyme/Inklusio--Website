---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/page.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /en/tags/{{ tag }}/
---
{% set keywords = translations[page.lang].keywords %}

<h1>{{ keywords.articles_marked_with }} “{{ tag }}”</h1>
{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}
<p>{{ keywords.see }} <a href="{{ '/en/tags/' | url }}">{{ keywords.all_tags }}</a>.</p>
