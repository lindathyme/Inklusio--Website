---
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: layouts/home.njk
permalink: /en/page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---

<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <table>
        <thead>
          <th>URL</th>
          <th>Page Title</th>
        </thead>
        <tbody>
          {%- for entry in entries | urlLanguageFilter(page.lang) %}
          <tr>
            <td>
              <a href="{{ entry.url }}"
                ><code>{{ entry.url }}</code></a
              >
            </td>
            <td>{{ entry.data.title }}</td>
          </tr>
          {%- endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
